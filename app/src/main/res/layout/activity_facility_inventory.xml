<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical"
        tools:context="caresurvey.sci.com.caresurvey.activity.FacilityInventoryActivity">

        <include
            android:id="@+id/include_inventory_ques_01"
            layout="@layout/facility_inventory_question_include"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp" />

        <include
            android:id="@+id/include_inventory_ques_02"
            layout="@layout/facility_inventory_question_include"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp" />

        <include
            android:id="@+id/include_inventory_ques_03"
            layout="@layout/facility_inventory_question_include"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp" />

        <include
            android:id="@+id/include_inventory_ques_04"
            layout="@layout/facility_inventory_question_include"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp" />

        <include
            android:id="@+id/include_inventory_ques_05"
            layout="@layout/facility_inventory_question_include"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp" />


        <include
            android:id="@+id/include_inventory_ques_06"
            layout="@layout/facility_inventory_question_include"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp" />

        <include
            android:id="@+id/include_inventory_dust_layout"
            layout="@layout/inventory_dust_include"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp" />
    </LinearLayout>
</ScrollView>